{
  "manifest_version": 3,
  "name": "智能验证码识别助手",
  "version": "1.0.0",
  "description": "自动识别网页中的各类验证码并填写",
  "icons": {
    "16": "assets/icon/icon16.ico",
    "48": "assets/icon/icon48.ico",
    "128": "assets/icon/icon128.ico"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon/icon16.ico",
      "48": "assets/icon/icon48.ico",
      "128": "assets/icon/icon128.ico"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
